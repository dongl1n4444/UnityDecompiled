<SyntaxMode name = "UnityTxt" mimeTypes="text/x-unitytxt" ignorecase="true" extends="text/x-csharp">
	<EolSpan color = "Preprocessor" rule="text.preprocessor.empty">CONDITIONAL</EolSpan>
	<EolSpan color = "comment.doc" rule="CommentDocumentation" tagColor="comment.tag.doc">///</EolSpan>
	<EolSpan color = "Comment(Line)" rule="Comment">//</EolSpan>
	<EolSpan tagColor = "Preprocessor" rule="text.preprocessor">#include</EolSpan>

	<Property name="LineComment">//</Property>
	<Property name="BlockCommentStart">/*</Property>
	<Property name="BlockCommentEnd">*/</Property>
	<Property name="StringQuote">"</Property>
	<Property name="StringQuote">'</Property>
	
	<Span color = "Comment(Block)" rule="Comment" tagColor="comment.tag.block">
		<Begin>/*</Begin>
		<End>*/</End>
	</Span>
	
	<Span color = "String" rule="String" stopateol = "false" escape='""'>
		<Begin>@"</Begin>
		<End>"</End>
	</Span>

	<Span color = "String" rule="String" stopateol = "true" escape='\'>
		<Begin>"</Begin>
		<End>"</End>
	</Span>

	<Span color = "String" rule="String" stopateol = "true" escape="\">
		<Begin>&apos;</Begin>
		<End>&apos;</End>
	</Span>
	
	<Keywords color = "Preprocessor" ignorecase="false" >
		<Word>CSRAW</Word>
		<Word>CSNONE</Word>
		<Word>CLASS</Word>
		<Word>CUSTOM</Word>
		<Word>CUSTOM_PROP</Word>
		<Word>THREAD_SAFE</Word>
		<Word>BEGIN</Word>
		<Word>END</Word>
		<Word>TYPEMAP</Word>
		<Word>ENUM</Word>
		<Word>DOCUMENT</Word>
		<Word>AUTO</Word>
		<Word>AUTO_PROP</Word>
		<Word>AUTO_PTR_PROP</Word>
		<Word>OBSOLETE</Word>
		<Word>THREAD_UNSAFE</Word>
		<Word>CONVERTEXAMPLE</Word>
		<Word>NONSEALED_CLASS</Word>
		<Word>CONDITIONAL</Word>
		<Word>STRUCT</Word>
	</Keywords>
	
	<Match color =  "Preprocessor">C\+\+RAW</Match>
	<Match color =  "Preprocessor">BEGIN DOC</Match>
	<Match color =  "Preprocessor">END DOC</Match>
	<Match color =  "Preprocessor">BEGIN EX</Match>
	<Match color =  "Preprocessor">END EX</Match>
	
	<Rule name = "text.preprocessor">
	<Keywords color = "text.preprocessor.keyword">
		<Word>include</Word>
	</Keywords>
	</Rule>
	<Match color = "Constant(Digit)">CSharpNumber</Match>

	<Rule name = "CommentDocumentation">
		<Span color = "string" stopateol = "true" escape="\" rule="String" >
			<Begin>"</Begin>
			<End>"</End>
		</Span>
		<Keywords color="Keyword(Comment)">
			<Word>@c</Word>
			<Word>@code</Word>
			<Word>@example</Word>
			<Word>@exception</Word>
			<Word>@list</Word>
			<Word>@para</Word>
			<Word>@param</Word>
			<Word>@paramref</Word>
			<Word>@permission</Word>
			<Word>@remarks</Word>
			<Word>@returns</Word>
			<Word>@return</Word>
			<Word>@see</Word>
			<Word>@seealso</Word>
			<Word>@summary</Word>
			<Word>@value</Word>
			<Word>@type</Word>
			<Word>@name</Word>
			<Word>@cref</Word>
			<Word>@item</Word>
			<Word>@term</Word>
			<Word>@description</Word>
			<Word>@listheader</Word>
			<Word>SA</Word>
		</Keywords>
	</Rule>
</SyntaxMode>
